# Application
NODE_ENV=development
VITE_APP_NAME="Modern Portfolio"
VITE_APP_VERSION=$npm_package_version
VITE_APP_DESCRIPTION="A modern portfolio website"
VITE_APP_BASE_URL=http://localhost:3000

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# Analytics (optional)
# VITE_GA_TRACKING_ID=UA-XXXXX-Y
# VITE_SENTRY_DSN=your-sentry-dsn

# Authentication (if applicable)
# VITE_AUTH0_DOMAIN=your-domain.auth0.com
# VITE_AUTH0_CLIENT_ID=your-client-id
# VITE_AUTH0_AUDIENCE=your-audience

# Feature Flags (optional)
# VITE_FEATURE_NEW_DESIGN=false
# VITE_FEATURE_DARK_MODE=true

# Build Configuration
VITE_SOURCEMAP=true
VITE_DROP_CONSOLE=false

# Performance
VITE_MEASURE_PERFORMANCE=false

# Internationalization (i18n)
VITE_DEFAULT_LOCALE=en
VITE_FALLBACK_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_STRATEGY=generateSW
VITE_PWA_REGISTER_TYPE=autoUpdate
VITE_PWA_INJECT_REGISTER=script

# Sentry (optional)
# VITE_SENTRY_DSN=your-sentry-dsn
# VITE_SENTRY_ENVIRONMENT=development

# Google Analytics (optional)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Social Media (update with your profiles)
VITE_SOCIAL_GITHUB=yourusername
VITE_SOCIAL_TWITTER=yourusername
VITE_SOCIAL_LINKEDIN=yourusername
VITE_SOCIAL_EMAIL=your.email@example.com

# Contact Information
VITE_CONTACT_EMAIL=contact@example.com
VITE_CONTACT_PHONE=+1234567890
VITE_CONTACT_ADDRESS=123 Main St, City, Country

# SEO
VITE_SITE_TITLE="Your Name - Portfolio"
VITE_SITE_DESCRIPTION="A modern portfolio website showcasing my work and skills"
VITE_SITE_KEYWORDS="portfolio, web development, react, typescript, frontend"
VITE_SITE_IMAGE="/images/og-image.jpg"
VITE_SITE_URL=https://your-portfolio.com

# Theme
VITE_PRIMARY_COLOR=#3b82f6
VITE_SECONDARY_COLOR=#10b981
VITE_ACCENT_COLOR=#8b5cf6
VITE_BACKGROUND_COLOR=#ffffff
VITE_TEXT_COLOR=#1f2937
VITE_DARK_MODE=false

# Animation
VITE_ANIMATE_ROUTES=true
VITE_ANIMATE_COMPONENTS=true
VITE_ANIMATION_DURATION=300

# Performance
VITE_IMAGE_OPTIMIZATION=true
VITE_LAZY_LOAD_IMAGES=true
VITE_USE_WEBP=true

# Development
VITE_SHOW_DEV_UI=true
VITE_ENABLE_MOCK_SERVICE_WORKER=false

# Testing
VITE_TEST_MODE=false
VITE_E2E_TESTING=false

# Build
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_COMPRESS=true
VITE_BUILD_COMPRESS_DELETE_ORIGIN_FILE=false

# Server
VITE_SERVER_PORT=3000
VITE_SERVER_HOST=0.0.0.0
VITE_SERVER_HTTPS=false
VITE_SERVER_OPEN=true
VITE_SERVER_CORS=true

# API (example)
VITE_API_URL=/api
VITE_API_TIMEOUT=10000
VITE_API_VERSION=v1

# Authentication (example)
VITE_AUTH_TOKEN_KEY=auth_token
VITE_REFRESH_TOKEN_KEY=refresh_token
VITE_TOKEN_EXPIRY_KEY=token_expiry

# Feature Flags (example)
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false

# External Services (example)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
